import random
# Library untuk fitur random(int, floaat(uniform))
# jika pake random:
# saham = random.uniform(1,10) #dalam (angka awal sampai angka akhir)
# print(saham)

# Operator assigment : +=, -=, /=
a = 5
a += 10
print(a)

uang = 0
mama = 1000000
uang += mama
print("uang saya sekarang :", uang)

adek = 550000
# uang -= adek
print("uang saya sekarang :", uang)

saham = 0.02
saham = random.uniform(0,1) # Import random
print("kenaikan saham:" , saham) 
keuntungan = uang * saham
# uang *= saham
print("keuntungan saya :" , keuntungan)
uang += keuntungan
print("uang saya sekarang :", uang)


if uang < 800000:
  print("kerja lebih keras ya!")
elif uang < 500000: #perbandingan pilhan gunakan "elif"
  print("kamu gaboleh jajan harus kerja")
else: #nerima kondisi apapun / pilihan terakhir
  print("yeayy kamu banyak uang")


# Contoh Modulo

# Operator Relasional
a = 5
b = 10
print(a==b) #hasilnya false karena variabel a beda dengan variabel b (int)
print("1"==1) #hasilnya false karena string "1" beda dengan 1

c = 2
d = 2
print(c==d) #hasilnya true karena variabel c sama dengan variabel d (int)
