while True:
  print("\n==== MENU SEVEN DAY ====")
  print("1. Melihat DATA RANDOM Yang Didapatkan")
  print("2. Melihat DATA PERHARI")
  print("3. Melihat NILAI MAXX")
  print("4. Melihat NILAI MINN")
  print("5. Melihat NILAI MEAN")
  print("6. MENU SELESAI")
  pilihan = input("\nPilih Menu apa? (1/2/3/4/5/6): ")

  if pilihan == "1":
    print("\n=== DATA RANDOM ===")
    for d in data_random:
      print(d)

  elif pilihan == "2":
    print("\n=== DATA PERHARI ===")
    for i, p in enumerate(new_data, start=0):
      print(f"{æ›œæ—¥[i]} : {p}")

  elif pilihan == "3":
    print("\n=== NILAI MAXIMUM ===")
    print(data_random.max())

  elif pilihan == "4":
    print("\n=== NILAI MINIMUM ===")
    print(data_random.min())

  elif pilihan == "5":
    print("\n=== NILAI MEAAN ===")
    print(data_random.mean())

  elif pilihan == "6":
    print("\n=== ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã™ çš†ã•ã‚“ğŸ˜ğŸ‘ ===")
