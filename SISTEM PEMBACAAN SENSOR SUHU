import numpy as np, random

data_random = np.random.randint(10,40, size = 35)
print("Data random yang didapatkan : ", data_random)

new_data = data_random.reshape(7,5)
print("\ndata reshaping: ", "\n", new_data)

print("\nNilai max :", data_random.max())
print("Nilai min :", data_random.min())
print("Nilai mean :", data_random.mean())

