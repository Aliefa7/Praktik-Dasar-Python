nomor = []

def penambahan_mahasiswa(nama_mahasiswa):
  nomor.append(nama_mahasiswa)

def greeting(nama_mahasiswa):
  nomor.append(nama_mahasiswa)
  i = len(nomor)
  print("Nama Mahasiswa", i ,":", nama_mahasiswa,"ğŸ˜")

def nomor_urut_mahasiswa():
  print("Halo", greeting, " semangat belajarnya yağŸ˜ğŸ‘")


greeting("pipaw")
greeting("budi")
greeting("yanto")

nomor_urut_mahasiswa()

greeting("pipaw")
greeting("budi")
greeting("yanto")

