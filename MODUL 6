=== PROGRAM 2 ===
ata_Mahasiswa = []
data_kelas = []

def view():
  print("=== DATA KELAS ===")
  if len(data_kelas) == 0:
    print("datanya kosong")
  else:
    for i in data_kelas:
      print(i)

def view2():
  print("\n===data Mahasiswa ===")
  if len(data_Mahasiswa) == 0:
    print("datanya kosong")
  else:
    for n in data_Mahasiswa:
      print (n)

def average(nama,a):
  global avg
  avg = (a)
  print("nilai mata kuliah python",nama,":",avg)
  return avg

view()
data_kelas.append(average("raffi",90))
data_kelas.append(average("alifa",98))

view2()
view()

